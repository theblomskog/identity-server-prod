@using Microsoft.AspNetCore.Hosting
@using Microsoft.Extensions.Hosting
@using Microsoft.Extensions.Configuration
@inject IConfiguration config
@inject IWebHostEnvironment env

@{
    ViewData["Title"] = "Home Page";
}

<h3>Environment details</h3>

<table class="table">
    <tr>
        <td>ApplicationName</td>
        <td>@env.ApplicationName</td>
    </tr>
    <tr>
        <td>EnvironmentName</td>
        <td>@env.EnvironmentName</td>
    </tr>
    <tr>
        <td>IsDevelopment</td>
        <td>@env.IsDevelopment()</td>
    </tr>
    <tr>
        <td>IsStaging</td>
        <td>@env.IsStaging()</td>
    </tr>
    <tr>
        <td>IsProduction</td>
        <td>@env.IsProduction()</td>
    </tr>
</table>


@{
    var mysettings = config.GetSection("Settings");
}
<br />
Name: @mysettings["Name"]<br />
Email: @mysettings["Email"]<br />

<br />
Name: @config["Settings:Name"]
<br />
Email: @config["Settings:Email"]
<br />


<br />
Url: @config["Vault:Url"]
<br />
ClientId: @config["Vault:ClientId"]
<br />

mysecret: @config["mysecret"]
